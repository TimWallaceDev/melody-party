{
  "name": "typescript-express",
  "version": "1.0.0",
  "description": "Basic Express.js app with TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "build": "tsc",
    "test": "jest"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "verbose": true,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$"
  },
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.17.2",
    "shuffle-array": "^1.0.1"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.11",
    "@types/jest": "^29.5.12",
    "@types/shuffle-array": "^1.0.5",
    "@types/socket.io": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "eslint": "^8.35.0",
    "globals": "^15.8.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.5.2",
    "typescript-eslint": "^7.15.0"
  }
}
